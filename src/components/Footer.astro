---
import { Icon } from 'astro-icon/components'
const isTop = Astro.url.pathname === '/'
---

{
  !isTop && (
    <div class="returnButton">
      <a href="/">
        <Icon name="home" />
      </a>
    </div>
  )
}
<footer>
  <a href="https://manasas.dev" rel="me" target="_blank">Â© manasas</a>
</footer>

<style lang="scss">
  .returnButton {
    text-align: center;
    display: flex;
    justify-content: center;
    padding: 16px 0;
    [data-icon='home'] {
      width: 24px;
      height: 24px;
      color: rgb(var(--linkColor));
    }
  }

  footer {
    text-align: center;
    padding: 16px 0px;
    a {
      text-decoration: none;
    }
  }
