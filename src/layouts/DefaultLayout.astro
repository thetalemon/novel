---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import Menu from "@/components/Menu.astro";
import { styleHelper } from "@/utils/styleHelper";

export interface Props {
  title: string;
  cardTextColor?: string;
  cardBgColor?: string;
  bgColor?: string;
  bgUrl?: string;
}

const isTop = Astro.url.pathname === "/";

const {
  title,
  cardTextColor = "rgb(9, 51, 58);",
  cardBgColor = "rgba(181, 184, 199, 0.9);",
  bgColor = "3, 7, 19",
  bgUrl = "/bg/top.webp",
} = Astro.props;

const STYLE = styleHelper([
  { name: "bgColor", value: bgColor },
  { name: "bgUrl", value: `url('${bgUrl}')` },
  { name: "cardTextColor", value: cardTextColor },
  { name: "cardBgColor", value: cardBgColor },
]);
---

<style lang="scss">
  main {
    display: flex;
    justify-content: center;
    width: 100%;
    min-height: 100vh;
    z-index: 1;
    position: relative;
    background: rgba(var(--bgColor), 1);

    .wrapper {
      display: flex;
      justify-content: center;
      row-gap: 40px;
      align-items: center;
      flex-direction: column;
      width: calc(min(min(100vh, 100vw), 1020px) + 280px);
    }

    .inner {
      margin: 48px 8px;
      width: calc(min(min(100vh, 100vw), 620px) - 24px);
      flex-shrink: 0;
      @media screen and (min-width: 1000px) {
        margin-right: 260px;
      }
    }

    .isTop.wrapper {
      .inner {
        @media screen and (min-width: 1000px) {
          margin-right: 0;
        }
      }
    }

    &::after {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: var(--bgUrl) no-repeat center bottom;
      background-size: contain;
      z-index: -2;
      opacity: 1;
    }
    &::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: linear-gradient(
        rgba(var(--bgColor), 1) calc(100vh - 100vw * 0.95),
        rgba(var(--bgColor), 0) calc(100vh - 100vw * 0.7)
      );
      z-index: -1;
      opacity: 1;
    }
  }
</style>

<Layout title={title}>
  <main style={STYLE}>
    <div class={`wrapper ${isTop ? "isTop" : ""}`}>
      <div class="inner">
        <Card>
          <slot />
        </Card>
      </div>
      {!isTop && <Menu />}
    </div>
  </main>
</Layout>
