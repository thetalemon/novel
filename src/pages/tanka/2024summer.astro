---
import TankaLayout from '@/layouts/TankaLayout.astro'
import TankaCard from '@/components/tanka/Card.astro'
import PrevNext from '@/components/tanka/PrevNext.astro'

const tankaList = [
  {
    first: '退屈な　日々はあまりに　早く過ぎ',
    second: 'うだる暑さに　動かぬ身体',
  },
  {
    first: '唐突に　きみがいうから　どうしたら',
    second: 'おろおろして　右往左往して',
  },
  {
    first: 'きみにあう　準備を進める　カバンには',
    second: '光るライトと　きみへのチケット',
  },
  {
    first: 'すこしだけ　勇気をだして　踏み出して',
    second: 'だから出会えて　幸せになれて',
  },
  {
    first: 'ほんとはね　疑ってたの　きみのこと',
    second: 'この世なんかに　いないんじゃないかって',
  },
  {
    first: 'きみがいる　本当にいる　それならさ',
    second: 'がんばってみても　いいかなって',
  },
  {
    first: 'また会える　その日目指して　鍛えるから',
    second: '再戦よろしく　おねがいします🐉',
  },
]
---

<TankaLayout title="夏の推し活短歌">
  <h1 class="title">推し活短歌 SUMMER TOUR 2024</h1>
  <div class="mainWrapper">
    <div class="mainContent js-tankaMain">
      {
        tankaList.map((tanka, index) => (
          <TankaCard id={String(index + 1)}>
            <span slot="first-line">{tanka.first}</span>
            <span slot="second-line">{tanka.second}</span>
          </TankaCard>
        ))
      }
    </div>
    <PrevNext />
  </div>
</TankaLayout>

<style lang="scss">
  .mainWrapper {
    display: flex;
    position: relative;
    .mainContent {
      display: flex;
      margin: 0 1rem;
      overflow-y: scroll;
      &::-webkit-scrollbar {
        display: none;
      }
    }
  }

  .title {
    color: white;
    font-weight: 200;
    font-size: 1rem;
    margin-bottom: 2rem;
  }
</style>
