---
import Layout from '@/layouts/Layout.astro'
import Card from '@/components/Card.astro'
import { getDate } from '@/utils/dateHelper'
import { HistoryList } from '@/data/history'

export const getStaticPaths = async () => {
  return HistoryList.map((item) => ({
    params: { slug: item.date },
    props: { item },
  }))
}
const { item } = Astro.props
---

<Layout
  title={item.title}
  ogImage={`https://novel.manasas.dev/notify/og/${item.date}.png`}
>
  <Card>
    <div class="cardInner">
      <img src=`/notify/og/${item.date}.png` />
      <p class="date">{getDate(item.date)}</p>
      <div set:html={item.description} />
    </div>
  </Card>
</Layout>

<style lang="scss">
  .cardInner {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }
  img {
    width: 100%;
    margin: 0 auto;
  }
</style>
