---
import { getCharacterList } from "@/lib/newt/character";
import { Image } from "astro:assets";

const characterList = await getCharacterList();
---

<div>
  <h2>キャラ一覧</h2>
  <ul>
    {
      characterList.map((item) => {
        const path = `/character/${item.slug}/`;

        const img: ImageMetadata = {
          src: item.image.src,
          width: item.image.width,
          height: item.image.height,
          format: item.image.fileType.includes("webp") ? "webp" : "png",
        };
        return (
          <li>
            <a href={path}>
              <Image src={img} alt={item.name} width={150} height={150} />
            </a>
          </li>
        );
      })
    }
  </ul>
</div>

<style lang="scss">
  h2 {
    text-align: left;
    font-size: 1.5rem;
    margin: 0.3rem 0 1rem 0;
  }

  ul {
    margin: 0.5rem 0;
    margin-bottom: 2rem;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    grid-column-gap: 8px;
    grid-row-gap: 8px;

    li {
      margin: 0;

      a {
        color: var(--cardTextColor);
        img {
          height: 150px;
          width: 150px;
          object-fit: cover;
          border-radius: 12px;
        }
      }

      &.current {
        display: flex;
        align-items: center;
        margin-left: 0;

        &::before {
          content: "";
          display: inline-block;
          background: var(--cardTextColor);
          border-radius: 50%;
          width: 0.75rem;
          height: 0.75rem;
          flex-shrink: 0;
          margin-right: 0.5rem;
        }
      }
    }
  }
</style>
