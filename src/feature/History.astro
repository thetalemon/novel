---
import { HISTORY_LIST } from "../data/history";
---

<ul class="root">
  {
    HISTORY_LIST.map(({ date, title, href }) => (
      <li>
        {href ? (
          <p>
            {date} <a href={href}>{title}</a>
          </p>
        ) : (
          <p>
            {date} {title}
          </p>
        )}
      </li>
    ))
  }
</ul>

<style lang="scss">
  .root {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 0.5em;
    max-width: 75%;
    margin: 1em auto;
    li {
      display: flex;
      p {
        margin: 0;
      }
    }
  }
</style>
