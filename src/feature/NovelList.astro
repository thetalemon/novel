---
import { getSimpleNovelList } from "@/lib/newt/novel";
import { getSeriesList } from "@/lib/newt/series";

const novels = await getSimpleNovelList();
const seriesList = await getSeriesList();
const seriesNovelList = seriesList.map((series) => {
  return {
    series: series,
    novels: novels.filter((novel) => novel.series.slug === series.slug),
  };
});
const isMenu = Astro.url.pathname !== "/";
---


<div class={isMenu ? "menu" : "topMenu"}>
  <h2>Novel</h2>
  {
    seriesNovelList.map((item) => (
      <>
        <h3>{item.series.title}</h3>
        <ul class="novelList">
          {item.novels.map((novel) => {
            const path = `/novel/${novel.slug}/`;
            return Astro.url.pathname === path ? (
              <li class="current">{novel.title}</li>
            ) : (
              <li>
                <a href={path}>{novel.title}</a>
              </li>
            );
          })}
        </ul>
      </>
    ))
  }
</div>

<style lang="scss">
  .topMenu {
    width: 90%;
    margin: 0 auto;
    li {
      text-align: left;
      margin-left: 1rem;
    }
    ul {
      margin-bottom: 2rem;
    }
  }
  .menu {
    margin: 0 auto;
    font-size: 1.2rem;
    border-radius: 8px;
    // color: rgba(55, 55, 55, 0.75);
    
    color: var(--cardTextColor);
    mix-blend-mode: luminosity;
    // color: inherit;
    h2 {
      text-align: left;
      font-size: 1.5rem;
      margin: 0.3rem 0 1rem 0;
    }

    h3 {
      text-align: left;
      font-size: 1.2rem;
      margin: 1rem 0 0.5rem 0;
    }

    ul {
      margin: 0.5rem 0;
      li {
        text-align: left;
        margin: 0.5rem 0rem 0.5rem 1.25rem;
        a {
          color: rgba(54, 125, 167, 0.8);
        }

        &.current {
          display: flex;
          align-items: center;
          margin-left: 0;

          &::before {
            content: "";
            display: inline-block;
            background: rgba(55, 55, 55, 0.75);
            border-radius: 50%;
            width: 0.75rem;
            height: 0.75rem;
            flex-shrink: 0;
            margin-right: 0.5rem;
          }
        }
      }
    }
  }
</style>